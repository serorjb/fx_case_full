{
  "data": {
    "fx_data_path": "data/FX",
    "fred_data_path": "data/FRED",
    "output_path": "output",
    "pairs": [
      "AUDNZD",
      "EURUSD",
      "GBPUSD",
      "USDJPY",
      "USDCHF",
      "USDCAD",
      "AUDUSD",
      "NZDUSD",
      "EURGBP",
      "EURJPY"
    ],
    "min_data_points": 100,
    "max_missing_ratio": 0.1,
    "outlier_threshold": 10.0
  },
  "model": {
    "pricing_model": "VGVV",
    "calibration_window": 60,
    "calibration_frequency": 20,
    "min_calibration_points": 5,
    "vgvv_max_iterations": 100,
    "vgvv_tolerance": 1e-06,
    "sabr_beta": 0.5,
    "sabr_max_iterations": 100,
    "interpolation_method": "cubic",
    "extrapolation_method": "flat"
  },
  "strategy": {
    "initial_capital": 1000000,
    "position_sizing_method": "equal",
    "max_position_size": 0.02,
    "kelly_fraction": 0.25,
    "vol_threshold": 0.005,
    "confidence_threshold": 0.6,
    "max_positions": 50,
    "max_concentration": 0.1,
    "max_tenor_concentration": 0.3,
    "max_directional_bias": 0.6,
    "entry_type": "limit",
    "exit_type": "dynamic",
    "time_exit_days": 5,
    "target_delta_neutral": true,
    "delta_hedge_threshold": 1000,
    "rehedge_frequency": "daily"
  },
  "risk": {
    "stop_loss": 0.02,
    "take_profit": 0.05,
    "max_drawdown": 0.1,
    "var_confidence": 0.95,
    "var_limit": 0.02,
    "max_delta": 100000,
    "max_gamma": 10000,
    "max_vega": 50000,
    "max_theta": 5000,
    "run_stress_tests": true,
    "stress_test_frequency": 5
  },
  "execution": {
    "bid_ask_spread": 0.001,
    "commission": 0.0001,
    "slippage": 0.0005,
    "market_impact_model": "linear",
    "impact_coefficient": 0.1,
    "order_timeout": 60,
    "max_order_retries": 3,
    "partial_fills": true
  },
  "backtest": {
    "start_date": "2006-01-01",
    "end_date": "2023-12-31",
    "rebalance_frequency": "daily",
    "use_intraday_data": false,
    "random_seed": 42,
    "benchmark": "SPX",
    "risk_free_rate": 0.02,
    "save_results": true,
    "save_positions": true,
    "save_trades": true,
    "generate_report": true
  },
  "log_level": "INFO",
  "log_file": "trading_system.log",
  "parallel_processing": true,
  "num_workers": 4
}